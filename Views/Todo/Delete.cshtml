@model TWTodos.Models.Todo

<h1>@ViewData["Title"]</h1>

<p>Tem certezaq que deseja escluir a tarefa <strong>@Model.Title</strong>?</p>

<form method="POST">
    <button class="btn btn-danger" type="submit">Excluir</button>
    <a asp-controller="Todo" asp-action="Index" class="btn btn-primary">Cancelar</a>

</form>