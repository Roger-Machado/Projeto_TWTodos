@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model List<TWTodos.Models.Todo>

<h1>@ViewData["Title"]</h1>

@if (Model.Count > 0)
{
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Título</th>
        <th scope="col">Criado em</th>
        <th scope="col">Data de etrega</th>
        <th scope="col">Finalizado em</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var todo in Model)
      {
        <tr>
          <td>@todo.Id</td>
          <td>@todo.Title</td>
          <td>@todo.CreateAt</td>
          <td>@todo.Deadline</td>
          <td>
            @(todo.FinishedAt.HasValue? todo.FinishedAt: "-")
          </td>
          <td>
            <a class="btn btn-success btn-sm">Concluir</a>
            <a class="btn btn-warning btn-sm">Editar</a>
            <a class="btn btn-danger btn-sm">Excluir</a>
          </td>
        </tr>
      }
    </tbody>
  </table>
}
else {
  <p>Nenhuma Tarefa Cadastrada</p>
}

  <a class="btn btn-primary">Nova Tarefa</a>